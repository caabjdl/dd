<%= render "shared/notify_message" %>
<div class="row">
  <div class="col-md-12">
    <div class="portlet box light-grey">
      <div class="portlet-title">
        <div class="caption"><i class="fa fa-cogs"></i>服务项目列表</div>
        <div class="actions">
          <%= link_to "添加", new_service_item_path, :class => "btn default" %>
        </div>
      </div>
      <div class="portlet-body">
        <div class="dataTables_wrapper form-inline" role="grid">
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <%= form_tag service_items_path, :method => 'get' do %>
              <div class="dataTables_filter pull-left">
                <label>
                  关键字:<%= text_field_tag :search, params[:search], :class => "form-control input-small" %>
                </label>
                <%= submit_tag '查询', :name => nil, :class => 'btn' %>
              </div>
              <% end %>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th>编号</th>
                  <th>服务类别</th>
                  <th>项目名称</th>
                  <th>发短信</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% @service_items.each do |f| %>
                <tr>
                  <td><%= f.no %></td>
                  <td><%= f.category %></td>
                  <td><%= f.name %></td>
                  <td><%= f.can_send_sms ? '是' : '否' %></td>
                  <td>
                    <%= link_to '编辑', edit_service_item_path(f) %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <%= paginate @service_items %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
