<h4 class="form-section"><%=title%></h4>
<div class="table-responsive">
  <table class="table table-hover table-bordered">
  <tr>
    <th>文件名</th>
    <th></th>
    <th>地址</th>
  </tr>
  <% if item %>
    <% media = item.vsalad_medias  %>
    <% media.each do |m|%>
    <tr>
      <td><%=m.file_type%></td>
      <td></td>
      <td>
      <% if m.file_type=="image" %>
        <img src="<%=m.url%>"  width="200" height="200">
     
      <% end %>
      <a href="<%=m.url%>">下载</a>
      </td>
    </tr>
    <% end %>
  <% end %>

  </table>
</div>